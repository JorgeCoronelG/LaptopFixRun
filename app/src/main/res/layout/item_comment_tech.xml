<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_commentTech"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radiusItemComment"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_margin="@dimen/marginItemComment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginTxtItemComment"
            android:layout_marginTop="@dimen/marginTxtItemComment"
            android:layout_marginRight="@dimen/marginTxtItemComment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">
                <TextView
                    android:id="@+id/txtNameCustomer"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"
                    android:text="Jorge Coronel GonzÃ¡lez"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txtItemComment"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutStars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/marginTxtItemComment"
            android:layout_marginLeft="@dimen/marginTxtItemComment"
            android:layout_marginTop="@dimen/marginTxtItemComment">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_margin="@dimen/marginTxtItemComment">
            <TextView
                android:id="@+id/txtDateService"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:layout_weight="6"
                android:text="01/01/2019"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>

            <TextView
                android:id="@+id/txtHourService"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_alignParentRight="true"
                android:text="3:00 P.M"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>