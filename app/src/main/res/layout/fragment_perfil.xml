<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".Fragment.Perfil">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user1"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUser"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="70dp"
        android:id="@+id/dUser">

        <ImageView
            android:id="@+id/imgUser1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_man_user" />
        <TextView
            android:id="@+id/txtUser"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="Jorge Coronel González"
            android:layout_weight="8"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Nombre completo"
            android:textColor="@color/colorTextHint"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dUser"
        android:layout_marginTop="50dp"
        android:weightSum="10"
        android:id="@+id/dPhone">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_phone" />
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="4423178002"
            android:layout_weight="8"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Teléfono"
            android:textColor="@color/colorTextHint"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dPhone"
        android:weightSum="10"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_email" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="tprog.jorge.coronel@outlook.com"
            android:layout_weight="8"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Correo electrónico"
            android:textColor="@color/colorTextHint"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/bEmail"
        android:layout_marginRight="@dimen/marginSideBtn"
        android:layout_marginLeft="@dimen/marginSideBtn"
        android:text="@string/edit"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_blue"/>
</LinearLayout>