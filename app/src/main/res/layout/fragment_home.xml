<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Customer.HomeServiceFragment"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_margin="@dimen/marginForms">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/serviceExpress"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/swUrgent"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/address"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms"/>

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms"/>

        <TextView
            android:id="@+id/txtChangeAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Problema del equipo"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms">

            <EditText
                android:id="@+id/etProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/describe_problem"
                android:inputType="text"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginForms"
            android:layout_marginLeft="@dimen/marginForms"
            android:layout_marginRight="@dimen/marginForms">

            <EditText
                android:id="@+id/etHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hours"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginSideBtn"
            android:text="@string/schedule"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_blue"/>

    </LinearLayout>

</ScrollView>