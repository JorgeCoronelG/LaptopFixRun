<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_datesCustomer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radiusItemComment"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_margin="@dimen/marginItemComment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/marginTxtItemComment"
            android:layout_marginTop="@dimen/marginTxtItemComment"
            android:layout_marginRight="@dimen/marginTxtItemComment">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Fecha: 01/05/2019"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Hora 12:00 pm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/marginTxtItemComment"
            android:layout_marginTop="@dimen/marginTxtItemComment"
            android:layout_marginRight="@dimen/marginTxtItemComment">

            <TextView
                android:id="@+id/txtRevision"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RevisiÃ³n: En LaptopFix"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="@dimen/marginTxtItemComment">

            <TextView
                android:id="@+id/txtProblem"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi laptop no sirve de la pantalla"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtItemComment"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>